            android:layout_height="wrap_content"

            ></LinearLayout>
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tips_69"
            android:background="@drawable/visit_dialog_btn2"
            android:textColor="#5CACEE"
            android:id="@+id/visit_continue"
            android:layout_weight="1"/>-->
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
