<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_40"
    android:gravity="center"
    android:id="@+id/visit_dialog"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20"
        android:background="@drawable/mc_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_14"

                android:layout_marginStart="@dimen/dp_14"
                android:background="@drawable/mc_select_login_back"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10" />

            <!--<ImageView
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_40"
                android:layout_centerInParent="true"
                android:background="@drawable/mc_login_bg"

                />-->

            <ImageView
                android:id="@+id/select_log_close"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/mc_select_login_close" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:text="网游新规："
                android:textColor="@color/mc_kn_selecte_log"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:lineSpacingMultiplier="1.3"
                android:text="@string/mc_tips_77"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>


        <!-- <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/visit_dialog_bg2">


    </LinearLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">


            <Button
                android:id="@+id/bind_mis_visit_continue"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@drawable/mc_round_btn_login"
                android:text="使用游客登录"
                android:textColor="@color/mc_kn_selecte_log"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/visit_bind_account_zh"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/mc_round_btn_login"
                android:text="升级萌创账号"
                android:textColor="@color/mc_kn_selecte_log"
                android:textSize="@dimen/sp_16" />

            <!--
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
