        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10">


            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_7"
                android:background="@drawable/mc_select_register_phone" />

            <EditText
                android:id="@+id/auto_account_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mc_first_login_edit1"
                android:hint="@string/mc_tips_78"
                android:imeOptions="actionDone"
                android:maxLength="12"
                android:paddingLeft="@dimen/dp_25"

                android:textSize="@dimen/sp_13"
                />

            <ImageButton
                android:id="@+id/drop_down"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/auto_account_et"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/mc_auto_login_drop" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_31"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_17"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_7"
                android:background="@drawable/mc_select_login_password" />

            <EditText
                android:id="@+id/mc_auto_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mc_first_login_edit1"
                android:hint="@string/mc_tips_31"
                android:paddingLeft="@dimen/dp_30"
                android:textSize="@dimen/sp_13"
                android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz@-_#@`~,.?/|\"
                android:imeOptions="actionDone"
                android:maxLength="16"
                android:singleLine="true"

                />


        </RelativeLayout>






        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
           >

            <Button
                android:id="@+id/login_game_bt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_31"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/mc_round_btn_login"
                android:text="@string/mc_tips_108"
                android:textSize="@dimen/sp_15" />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mc_tips_70"
                    android:textColor="#1E90FF"
                    android:id="@+id/mc_new_account_bt"
                    />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mc_tips_52"
                    android:textColor="#1E90FF"
                    android:layout_alignParentRight="true"
                    android:id="@+id/mc_up_password"/>



            </RelativeLayout>



        </LinearLayout>

