        <LinearLayout
            android:id="@+id/phone_register_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10"
            android:visibility="visible"
            >


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                >


                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_7"
                    android:background="@drawable/mc_select_register_phone" />

                <EditText
                    android:id="@+id/account__et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mc_tips_78"
                    android:paddingLeft="@dimen/dp_25"
                    android:textSize="@dimen/mc_login_user"
                    android:imeOptions="actionDone"
                    android:maxLength="12"
                    android:background="@drawable/mc_first_login_edit1"
                    />


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10">



                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_7"
                    android:background="@drawable/mc_select_login_password" />

                <EditText
                    android:id="@+id/password__et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mc_tips_31"
                    android:paddingLeft="@dimen/dp_25"
                    android:textSize="@dimen/mc_login_user"
                    android:password="true"
                    android:inputType="textPassword"
                    android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz@-_#@`~,.?/|\"
                    android:imeOptions="actionDone"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:background="@drawable/mc_first_login_edit1"
                    />

                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_0">

                <CheckBox
                    android:id="@+id/zc_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/mc_select_chanbox"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:checked="true"
                    />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/zc_cb"
                    android:layout_toRightOf="@+id/zc_cb"
                    android:text="@string/mc_tips_74"
                    android:textColor="@color/mc_kn_text"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/game_sy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/zc_cb"
                    android:layout_toRightOf="@+id/tv"
                    android:text="@string/mc_tips_75"
                    android:textColor="@color/mc_zc_xy"
                    android:textSize="@dimen/sp_10"

                    />

            </RelativeLayout>


            <Button android:layout_width="match_parent"
                android:layout_height="@dimen/dp_31"
                android:background="@drawable/mc_round_btn_login"
                android:text="@string/mc_tips_25"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:id="@+id/account_bind_bt"
                android:textSize="@dimen/sp_13"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>


