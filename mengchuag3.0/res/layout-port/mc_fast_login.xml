                    android:id="@+id/kn_user_zc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_weight="1"
                    android:background="@drawable/mc_round_btn_login"
                    android:text="@string/mc_tips_76"
                    android:textColor="@color/mc_kn_selecte_log"
                    android:textSize="@dimen/sp_13"


