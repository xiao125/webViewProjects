        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_9">

            <Button
                android:id="@+id/kn_selecte_user_register"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@color/mc_Kn_Username"
                android:text="@string/mc_tips_71"
                android:textColor="@color/mc_kn_selecte_log"
                android:textSize="@dimen/dp_13" />

            <Button
                android:id="@+id/kn_selecte_phone_register"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@color/mc_kn_text"
                android:text="@string/mc_tips_72"
                android:textColor="@color/mc_kn_selecte_log"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>



        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >


            <LinearLayout
                android:id="@+id/user_register_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_10"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="@string/mc_tips_73"
                    android:textColor="@color/mc_kn_text"
                    android:textSize="@dimen/sp_10" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_31"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10">

                    <EditText
                        android:id="@+id/ks_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mc_first_login_edit1"
                        android:hint="用户名"
                        android:paddingLeft="@dimen/dp_30"
                        android:textSize="@dimen/sp_13"

                        />

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_7"
                        android:background="@drawable/mc_select_login_user" />


                    <ImageView
                        android:id="@+id/select_close"
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/mc_select_login_close"


                        />

                </RelativeLayout>

                <!--        -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_31"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_17"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_7"
                        android:background="@drawable/mc_select_login_password" />

                    <EditText
                        android:id="@+id/kn_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mc_first_login_edit1"
                        android:hint="@string/mc_tips_24"
                        android:paddingLeft="@dimen/dp_30"
                        android:textSize="@dimen/sp_13"
                        android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz@-_#@`~,.?/|\"
                        android:imeOptions="actionDone"
                        android:maxLength="16"
                        android:singleLine="true"

                        />


                </RelativeLayout>




            </LinearLayout>




            <LinearLayout
                android:id="@+id/phone_register_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_10"
                android:visibility="gone">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_31"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20">


                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_7"
                        android:background="@drawable/mc_select_register_phone" />

                    <EditText
                        android:id="@+id/phone_ks_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mc_first_login_edit1"
                        android:hint="请输入手机号"
                        android:paddingLeft="@dimen/dp_25"
                        android:inputType="number"
                        android:textSize="@dimen/sp_13" />


                    <Button
                        android:id="@+id/phone_ks_code"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_45"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/mc_round_btn_green_tk_click"
                        android:gravity="center"
                        android:padding="@dimen/dp_5"
                        android:text="获取验证码"
                        android:inputType="number"
                        android:textColor="@color/mc_text_color_black"
                        android:textSize="@dimen/sp_13"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_31"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10">


                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_7"
                        android:background="@drawable/mc_select_register_code" />

                    <EditText
                        android:id="@+id/phone_ks_register_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mc_first_login_edit1"
                        android:hint="请输入验证码"
                        android:paddingLeft="@dimen/dp_25"
                        android:inputType="number"
                        android:textSize="@dimen/sp_13" />


                    <ImageView
                        android:id="@+id/phone_ks_close"
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/dp_10"
                        android:background="@drawable/mc_select_login_close"


                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_31"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10">


                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_7"
                        android:background="@drawable/mc_select_login_password" />

                    <EditText
                        android:id="@+id/phone_ks_register_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mc_first_login_edit1"
                        android:hint="请输入密码"
                        android:paddingLeft="@dimen/dp_25"
                        android:textSize="@dimen/sp_13"
                        android:inputType="textPassword"
                        android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz@-_#@`~,.?/|\"
                        android:imeOptions="actionDone"
                        android:maxLength="16"
                        android:singleLine="true"
                        />


                </RelativeLayout>

            </LinearLayout>



        </FrameLayout>





