<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:padding="@dimen/dp_50"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20"
        android:background="@drawable/mc_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            >

            <ImageView
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_40"
                android:layout_centerInParent="true"
                android:background="@drawable/mc_login_bg"

                />

            <ImageView
                android:id="@+id/account_bind_back"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/mc_select_login_close"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20">


            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_23"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_7"
                android:background="@drawable/mc_select_register_phone" />

            <EditText
                android:id="@+id/tourist_phone_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mc_first_login_edit1"
                android:hint="请输入手机号验证码"
                android:paddingLeft="@dimen/dp_25"
                android:textSize="@dimen/sp_13"
                android:inputType="number"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <Button
                android:id="@+id/tortist_code"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_45"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mc_round_btn_green_tk_click"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="发送验证码"
                android:textColor="@color/mc_text_color_gray"
                android:textSize="@dimen/sp_12"

                />

        </RelativeLayout>


        <TextView
            android:paddingTop="@dimen/dp_15"
            android:layout_gravity="center_horizontal"
            android:id="@+id/game_sy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/zc_cb"
            android:text="@string/mc_tips_98"
            android:textColor="@color/mc_kn_selecte_log"
            android:textSize="10sp"

            />

        <Button android:layout_width="match_parent"
            android:layout_height="@dimen/dp_31"
            android:background="@drawable/mc_round_btn_login"
            android:text="@string/mc_tips_25"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/account_bind_bt"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/mc_kn_selecte_log"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>
    </LinearLayout>