                android:background="@drawable/mc_select_login_back"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="@string/mc_tips_87"
                android:textColor="@color/mc_text_color_gray"

                android:textSize="@dimen/sp_17"

                />

            <ImageView
                android:id="@+id/select_login_close"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/mc_select_login_close"


                />
        </RelativeLayout>


